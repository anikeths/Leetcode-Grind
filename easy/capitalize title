class Solution:
    def capitalizeTitle(self, title: str) -> str:
        res =""
        for word in title.split(" "):
            if len(word ) <= 2:
                word =  word.lower()
            
            else:
                word =  word[0].upper() + word[1:].lower()


            res = res + " " + word
        print(res)


        return res[1:]


        

